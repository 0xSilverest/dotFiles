{ 
    "languageserver": { 
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": ["*.cabal"
                           , "stack.yaml"
                           , "cabal.project"
                           , "package.yaml"],
            "filetypes": ["haskell", "lhaskell"]
        },
        "metals": {
            "command": "metals-vim",
            "rootPatterns": ["build.sbt"],
            "filetypes": ["scala", "sbt"] 
        }, 
        "latex": {
                "command": "texlab",
                "ignoredRootPaths": ["~"],
                "filetypes": ["tex", "bib", "plaintex", "context"]
        },
        "graphql": {
            "command": "graphql-lsp",
            "args": ["server", "-m", "stream"],
            "filetypes": ["graphql"]
        },
        "xml": {
            "command": "lemminx",
            "filetypes": ["xml"]
        }
    }
}


