# Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
#set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

set font "inconsolata 15"

set default-fg               "#E5E5E5"
set default-bg               "#181616"

set completion-bgl           "#181616"
set completion-fg            "#E5E5E5"
set completion-highlight-bg  "#4A4559"
set completion-highlight-fg  "#E5E5E5"
set completion-group-bg      "181616"
set completion-group-fg      "#82AAFF"

set statusbar-fg             "#E5E5E5"
set statusbar-bg             "#181616"

set notification-bg          "#181616"
set notification-fg          "#E5E5E5"
set notification-error-bg    "#181616"
set notification-error-fg    "#FF3355"
set notification-warning-bg  "#181616"
set notification-warning-fg  "#FFCB6B"

set inputbar-fg              "#E5E5E5"
set inputbar-bg              "#181616"

set recolor-lightcolor       "#181616"
set recolor-darkcolor        "#E5E5E5"

set index-fg                 "#E5E5E5"
set index-bg                 "#181616"
set index-active-fg          "#E5E5E5"
set index-active-bg          "#181616"

set render-loading-bg        "#181616"
set render-loading-fg        "#E5E5E5"

set highlight-color          "#4A4559"
set highlight-fg             "#9C8CE6"
set highlight-active-color   "#9C8CE6"

set recolor                  "true"
set recolor-lightcolor       "#181616"
set recolor-darkcolor        "#E5E5E5"
set recolor-reverse-video    "true"
set recolor-keephue          "true"

set render-loading "false"
set scroll-step 50
set selection-clipboard clipboard
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
