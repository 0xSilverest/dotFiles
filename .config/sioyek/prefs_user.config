default_dark_mode 1

# TwilightSerpent theme colors
custom_background_color 0.094 0.086 0.086
custom_text_color 0.898 0.898 0.898

# Dark mode colors
dark_mode_background_color 0.094 0.086 0.086
dark_mode_contrast 0.8

# UI colors
text_highlight_color 0.611 0.549 0.902
search_highlight_color 0.510 0.667 1.0
visual_mark_color 0.611 0.549 0.902 0.3

# Status bar colors
status_bar_color 0.094 0.086 0.086
status_bar_text_color 0.898 0.898 0.898

# Auto-enable custom colors on startup
startup_commands toggle_custom_color

# Create theme macros for easy switching
new_macro _twilight_theme set_custom_text_color(#e5e5e5);set_custom_background_color(#181616)
new_macro _default_theme set_custom_text_color(#000000);set_custom_background_color(#ffffff)
